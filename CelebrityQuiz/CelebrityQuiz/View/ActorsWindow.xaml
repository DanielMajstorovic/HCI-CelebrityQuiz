<Window x:Class="CelebrityQuiz.View.ActorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:local="clr-namespace:CelebrityQuiz"
        Title="Celebrities" Height="780" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Icon="pack://application:,,,/Res/oscar.png">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E8F5E9" Offset="0"/>
            <GradientStop Color="#C8E6C9" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <ResourceDictionary>
            <local:ImageUrlConverter x:Key="ImageUrlConverter" />
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Title -->
        <TextBlock Grid.Row="0" 
                   Text="Celebrities" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Search Box -->
        <Border Grid.Row="1"
                Background="White" 
                BorderBrush="#AAAAAA"
                BorderThickness="1"
                CornerRadius="8" 
                Padding="10,0" 
                Height="40" 
                Width="300"
                HorizontalAlignment="Left"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:PackIcon Kind="Magnify" 
                                       Width="20" 
                                       Height="20" 
                                       VerticalAlignment="Center"
                                       Margin="5,0,10,0"/>
                <TextBox x:Name="SearchBox" 
                         Grid.Column="1" 
                         Background="Transparent"
                         BorderThickness="0"
                         VerticalAlignment="Center"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Search celebrities..."/>
            </Grid>
        </Border>

        <!-- Actors Grid -->
        <ItemsControl Grid.Row="2" 
                      ItemsSource="{Binding CurrentPageActors}"
                      Padding="25 0 0 0"
                      Visibility="{Binding HasActors, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="120" 
                            Height="240" 
                            Margin="10"
                            Background="White"
                            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Actor Image -->
                            <Border Height="200" 
                                    CornerRadius="8,8,0,0"
                                    ClipToBounds="True">
                                <Border.Background>
                                    <ImageBrush Stretch="UniformToFill" 
                                              ImageSource="{Binding ImageUrl, Converter={StaticResource ImageUrlConverter}}"/>
                                </Border.Background>
                            </Border>

                            <!-- Actor Name -->
                            <TextBlock Grid.Row="1"
                                       Text="{Binding Name}"
                                       FontSize="16"
                                       Padding="10"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- No Results Message -->
        <TextBlock Grid.Row="2"
                   Text="No actors found matching your search criteria."
                   FontSize="18"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="{Binding HasNoActors, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Pagination -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Visibility="{Binding HasActors, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Button Command="{Binding PreviousPageCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="5,0">
                <materialDesign:PackIcon Kind="ChevronLeft"/>
            </Button>

            <TextBlock Text="{Binding CurrentPage, StringFormat='Page {0}'}"
                       VerticalAlignment="Center"
                       Margin="10,0"/>

            <TextBlock Text="of"
                       VerticalAlignment="Center"
                       Margin="5,0"/>

            <TextBlock Text="{Binding TotalPages}"
                       VerticalAlignment="Center"
                       Margin="5,0"/>

            <Button Command="{Binding NextPageCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="5,0">
                <materialDesign:PackIcon Kind="ChevronRight"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>